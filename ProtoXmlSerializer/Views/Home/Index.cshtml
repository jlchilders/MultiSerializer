@model Models.CustInfoSerialize

@*@{
        Layout = "~/Views/Shared?_Layout.cshtml";
    }*@

<h2>Serializer</h2>

@using (Html.BeginForm())

{
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.StreetAddress, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.StreetAddress, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.City, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.State, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ZipCode, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.serializeTo, new { @class = "control-label" })
                @Html.EnumDropDownListFor(m => m.serializeTo, new { @class = "form-control", @style = "width:25%" })
            </div>
        </div>
        <div class="col-md-6">

            <div class="form-group">
                @Html.LabelFor(m => m.Serialized, new { @class = "control-label" })
                @Html.TextAreaFor(m => m.Serialized, new { @class = "form-control", @rows = "12", @width = "100%" })

            </div>
        </div>
    </div>

}
